{
  "name": "serialport-bridge",
  "version": "0.1.1",
  "description": "Provides a Socket IO based bridge between serial port and browser.",
  "author": "Will Dickson <will@iorodeo.com>",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "repository": "https://bitbucket.org/iorodeo/serialport-bridge",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "devDependencies": {
    "electron": "7.2.4",
    "electron-builder": "^19.52.1",
    "electron-rebuild": "^1.6.0"
  },
  "dependencies": {
    "browserify-middleware": "^8.0.0",
    "express": "^4.16.2",
    "ip": "^1.1.5",
    "lodash": "^4.17.4",
    "roboto-fontface": "^0.8.0",
    "serialport": "^7.0.2",
    "socket.io": "^2.0.4",
    "vue": "^2.5.13",
    "vuetify": "^0.17.6"
  },
  "build": {
    "appImage": {
      "systemIntegration": "doNotAsk"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": [ 
          "portable",
          "nsis"
        ],
      "icon": "icons/serialport_bridge.ico"
    },
    "mac" : {
        "icon":"icons/icon.icns" 
    },
    "nsis": {
        "oneClick": false
    }
  }
}
